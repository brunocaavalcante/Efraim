@model Web.Models.CaixaViewModel


<div class="container">
    <div class="row">
        <div class="col-sm alert alert-success"><h3>Valor Total: @Model.ValorTotal</h3></div>
        <div class="col-sm alert alert-warning"><h3>Valor Obtido: @Model.ValorObtido</h3></div>
        <div class="col-sm alert alert-danger"><h3>Valor Pendente: @Model.ValorPendente</h3></div>
    </div>

    <div class="row">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nome:</th>
                    <th>Valor:</th>
                    <th>Data:</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Depositos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contribuinte.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataDeposito)
                        </td>
                        <td class="text-right">
                            <a class="btn btn-info"><spam class="fa fa-search"></spam></a>
                            <a class="btn btn-warning"><spam class="fa fa-pencil-alt"></spam></a>
                            <a class="btn btn-danger"><spam class="fa fa-trash"></spam></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
