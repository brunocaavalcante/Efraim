@model Web.Models.DepartamentoViewModel

@{
    ViewData["Title"] = "Editar Departamento";
}

<h1>@ViewData["Title"]</h1>

<hr />
<form id="formDepartamento" asp-action="Edit">

    <vc:Erros></vc:Erros>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Membros"/>

    <div class="form-row">        
        <div class="form-group col-md-6">
             <div class="mb-3 form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="Descricao"></label>
                <input asp-for="Descricao" class="form-control" id="descricao" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="mb-3 form-group">
                <label asp-for="DataCadastro"></label>
                <input asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div> 
        </div>         
    </div>    
</form>

<partial name="Membro/_AdicionarMembro" model="Model"/>
<partial name="Lider/_AdicionarLider" model="Model" />

<div class="card form-group col-md-6">                 
    <div class="card-body">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#membroAddModal">Adicionar Membros</button><hr>   
        @if(Model.Membros != null && Model.Membros.Count > 0){ <partial name="Membro/_ListarMembro" model="Model"/> } 
    </div>
</div>

<div class="card form-group col-md-6">
    <div class="card-body">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#liderAddModal">Adicionar Lider</button><hr>
        @if (Model.Lideres != null && Model.Lideres.Count > 0)
        {<partial name="Lider/_ListarLider" model="Model" />}
    </div>
</div>

 <div class="form-group">
    <a class="btn btn-info" asp-action="Index">Voltar</a>
    <button  id="Salvar" class="btn btn-primary">Salvar</button>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function(){

            $("#Salvar").click(function(){
                $('#formDepartamento').submit();
            });       
        });
    </script>   
}