@using Web.Extensions
@model Web.Models.DepartamentoViewModel

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Membro.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membro.CPF)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Membros)
        {            
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @this.FormatarCpf(item.CPF)
                </td>
                <td class="text-right">
                    <form id="formRemoverMembro" asp-controller="departamento" asp-action="RemoverMembro">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Membro.CPF" value="@item.CPF" />
                        <button id="btnRemoverMembro" class="btn btn-danger">Remover</button>   
                    </form>                        
                </td>                                            
            </tr>
        }
    </tbody>
</table>