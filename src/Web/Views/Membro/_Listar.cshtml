@using Web.Extensions
@model IEnumerable<Web.Models.UsuarioViewModel>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @item.Telefone
                </td>
                <td class="text-right">
                    @if (this.VerificaPermissao(item,"Details", item.Controller))
                    {
                        <a class="btn btn-info" asp-action="Details" asp-controller="Membro" asp-route-id="@item.Id"><spam class="fa fa-search"></spam></a>
                    }
                    @if (this.VerificaPermissao(item,"Edit", item.Controller))
                    {
                        <a class="btn btn-warning" asp-action="Edit" asp-controller="Membro" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam></a>
                    }
                    @if (this.VerificaPermissao(item,"Delete", item.Controller))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Membro" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
