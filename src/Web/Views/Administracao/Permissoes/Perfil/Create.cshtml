@model Web.Models.PerfilViewModel

@{
    ViewData["Title"] = "Criar Perfil";
}

<h1>Criar Perfil</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePerfil">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcionalidade" class="control-label"></label>
                <input asp-for="Funcionalidade" class="form-control" />
                <span asp-validation-for="Funcionalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Permissoes" class="control-label"></label>
                <input asp-for="Permissoes" class="form-control" />
                <span asp-validation-for="Permissoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
